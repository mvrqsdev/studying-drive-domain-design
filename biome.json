{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"json": {
		"formatter": {
			"expand": "always"
		},
		"parser": {
			"allowComments": true
		}
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 70,
		"attributePosition": "multiline",
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error",
				"noConstAssign": "error"
			},
			"style": {
				"noUselessElse": "error",
				"useImportType": "off",
				"noUnusedTemplateLiteral": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"suspicious": {
				"noConsole": "error",
				"noArrayIndexKey": "info"
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"expand": "always",
			"attributePosition": "multiline"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
